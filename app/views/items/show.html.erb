<p id="notice"><%= notice %></p>

<div class="row">
	<div class="col md5">
		<div class="item-image">
			<%= image_tag @item.image.url(:medium), class: 'responsive-img' %>
		</div>
		<div class="item-price">
			<%= number_to_currency(@item.price) %>
		</div>
	</div>
	<div class="col md7">
		<h5 class="item-name">
			<%= @item.name %>
		</h5>
    <h6 class = "grey-text"><%= @item.stock%> available</h6>
		<p><%= @item.description %></p>

	</div>
</div>
<span><%= form_for OrderItem.new, url: order_items_path do |f| %>
  <span><%= link_to 'Back', root_path, class: 'btn' %></span>
      <%= f.hidden_field :item, :value => @item.id %>
      <%= f.submit 'Add to Cart', class: 'btn' %>
<% end  %></span>
<div class='bumper'> </div>
